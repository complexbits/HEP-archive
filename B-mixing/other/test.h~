struct vars_t{
  
  // ---------- Define data variables: -------------  
  Double_t runNo[100000];
  Double_t evtNo[100000];
  Double_t mass[100000];
  Double_t lifetime[100000];
  Int_t tag[100000];
  
  // --------- Define fit parameters ----------  

  
  Double_t cosfit_par[100];
  Double_t cosfit_err[100];
    
  Double_t t_sig[100];
  
}
vars_t vts;
Double_t min = -4;
